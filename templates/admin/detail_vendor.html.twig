{{ form_start(form, {'action': '#' }) }}
<h2 class="page-title">
    Vendor Detail
    {% if user.banned %}
        <button type="submit" class="btn btn-primary btn-xs pull-right">Unban</button>
    {% else %}
        <button type="submit" class="btn btn-danger btn-xs pull-right">Ban</button>
    {% endif %}
</h2>
<div class="row">
    <div class="form-group col-sm-6">
        {{ form_row(form.username,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-6">
        {{ form_row(form.contact_mail,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-6">
        {{ form_row(form.phone,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-6">
        {{ form_row(form.vat,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-6">
        {{ form_row(form.website,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-6">
        {{ form_row(form.email,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-4">
        {{ form_row(form.door_number,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-8">
        {{ form_row(form.street,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-4">
        {{ form_row(form.district) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-4">
        {{ form_row(form.zipcode) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-4">
        {{ form_row(form.locality) }}
    </div><!-- /.form-group -->
    <div class="form-group col-sm-4">
        {{ form_row(form.sub_date,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div><!-- /.form-group -->
</div>
{{ form_end(form) }}