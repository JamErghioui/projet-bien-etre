{{ form_start(form) }}
<h2 class="page-title">
    Internaut Detail
    {% if user.banned %}
        <button type="submit" class="btn btn-primary btn-xs pull-right">Unban</button>
    {% else %}
        <button type="submit" class="btn btn-danger btn-xs pull-right">Ban</button>
    {% endif %}
</h2>
<div class="row">
    <div class="form-group col-sm-4">
        {{ form_row(form.username,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div>
    <div class="form-group col-sm-4">
        {{ form_row(form.email,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div>
    <div class="form-group col-sm-4">
        {{ form_row(form.sub_date,{ 'attr' : { 'class' : 'form-control' }}) }}
    </div>
</div>
{{ form_end(form) }}