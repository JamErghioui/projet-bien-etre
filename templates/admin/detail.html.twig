{% extends 'admin-base.html.twig' %}

{% block title %}Admin - Settings{% endblock %}

{% block stylesheets %}
    <style>
        input[type=checkbox]{
            display: none;
        }
    </style>
{% endblock %}

{% block breadcrumb %}
    <!-- Bread Crumb -->
    <div class="header-statusbar">
        <div class="header-statusbar-inner">
            <div class="header-statusbar-left">
                <h1>Detail</h1>
            </div>
            <div class="header-statusbar-right">
                <div class="hidden-xs visible-lg">
                    <ul class="breadcrumb">
                        <li><a href="{{ path('admin') }}">Dashboard</a></li>
                        {% if type == 'internaut' %}
                            <li><a href="{{ path('admin_internauts') }}">Internauts</a></li>
                        {% elseif type == 'vendor' %}
                            <li><a href="{{ path('admin_vendors') }}">Vendors</a></li>
                        {% endif %}
                        <li><a href="#">Detail</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block navigation %}
    <li><a href="{{ path('admin') }}"><i class="fa fa-home"></i></a></li>
    <li {% if type == 'internaut' %}class="active"{% endif %}><a href="{{ path('admin_internauts') }}"><i class="fa fa-users"></i></a></li>
    <li {% if type == 'vendor' %}class="active"{% endif %}><a href="{{ path('admin_vendors') }}"><i class="fa fa-star"></i></a></li>
    <li><a href="#"><i class="fa fa-cog"></i></a></li>
{% endblock %}

{% block body %}
    <div class="background-white p20 mb50">
        {% if type == 'internaut' %}
            {{ include('admin/detail_internaut.html.twig') }}
        {% elseif type == 'vendor' %}
            {{ include('admin/detail_vendor.html.twig') }}
        {% else %}
            <h1>User not found ¯\_(ツ)_/¯</h1>
        {% endif %}
    </div>
{% endblock %}