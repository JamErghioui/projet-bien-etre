<header class="header">
    <div class="header-wrapper">
        <div class="container">
            <div class="header-inner">
                <div class="header-logo">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('assets/img/logo.png') }}" alt="Logo">
                        <span>Bien-ÃŠtre</span>
                    </a>
                </div><!-- /.header-logo -->

                <div class="header-content">
                    <div class="header-top">
                        <div class="header-search">
                            <!-- Search Bar -->
                            {{ include('search_templates/search_bar.html.twig') }}
                            <!-- Fin Search Bar -->
                        </div><!-- /.header-search -->

                        <ul class="header-nav-social social-links nav nav-pills">
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul><!-- /.header-nav-social -->

                        <ul class="header-nav-secondary nav nav-pills">
                            {% if app.user %}
                                {% for key, val in app.user.roles %}
                                    {% if val == "ROLE_ADMIN" %}
                                        <li><a href="{{ path('admin') }}">Dashboard &nbsp; <i class="fa fa-cog"></i></a></li>
                                    {% else %}
                                        <li><a href="{{ path('profile') }}">{{ app.user.username }} &nbsp; <i class="fa fa-user" aria-hidden="true"></i></a></li>
                                    {% endif %}
                                    <li><a href="{{ path('user_logout') }}">Logout &nbsp; <i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                                {% endfor %}
                            {% else %}
                                <li><a href="{{ path('user_login') }}">Login</a></li>
                                <li><a href="{{ path('user_registration') }}">Register</a></li>
                            {% endif %}
                        </ul>
                    </div><!-- /.header-top -->

                    <div class="header-bottom">

                        <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">
                            <li >
                                <a href="{{ path('home') }}">Home</a>
                            </li>

                            <li >
                                <a href="#">Categories <i class="fa fa-chevron-down"></i></a>

                                <ul class="sub-menu">
                                    {{ render(controller(
                                        'App\\Controller\\RepositoryController::list_categories'
                                    )) }}
                                </ul>
                            </li>
                        </ul>

                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".header-nav-primary">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div><!-- /.header-bottom -->
                </div><!-- /.header-content -->
            </div><!-- /.header-inner -->
        </div><!-- /.container -->
    </div><!-- /.header-wrapper -->
</header><!-- /.header -->