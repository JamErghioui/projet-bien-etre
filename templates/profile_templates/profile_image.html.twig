{% extends 'base.html.twig' %}

{% block title %}Edit your profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-4 col-lg-3">
            <div class="sidebar">
                <div class="widget">
                    <div class="user-photo">
                        <a href="#">
                            <img src="{{ asset('uploads/profile/' ~ app.user.profileImage.imageFileName ) }}" alt="User Photo">
                        </a>
                    </div><!-- /.user-photo -->
                </div><!-- /.widget -->
                <div class="widget">
                    <ul class="menu-advanced">
                        <li class="active"><a href="{{ path('profile') }}"><i class="fa fa-user"></i> Edit Profile</a></li>
                        {% for key, value in app.user.roles %}
                            {% if value == 'ROLE_VENDOR' %}
                                <li><a href="{{ path('stages') }}"><i class="fa fa-clipboard"></i> Stages</a></li>
                            {% endif %}
                        {% endfor %}
                        <li><a href="#"><i class="fa fa-key"></i> Password</a></li>
                        <li><a href="{{ path('user_logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                    </ul>
                </div><!-- /.widget -->
            </div><!-- /.sidebar -->
        </div><!-- /.col-* -->
        <div class="col-sm-8 col-lg-9">
            <div class="content">
                <div class="page-title">
                    <h1>Edit Profile Picture</h1>
                </div><!-- /.page-title -->
                <div class="background-white p20 mb30">
                    {{ include('profile_templates/image_form.html.twig') }}
                </div>
            </div><!-- /.content -->
        </div><!-- /.col-* -->
    </div><!-- /.row -->
{% endblock %}