{% extends 'base.html.twig' %}

{% block title %}Stage{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-4 col-lg-3">
            <div class="sidebar">
                <div class="widget">
                    <div class="user-photo">
                        <a href="#">
                            {% if app.user.profileImage %}
                                <img src="{{ asset( app.user.profileImage.imagePath ) }}" alt="User Photo">
                            {% else %}
                                <img src="{{ asset('assets/img/default/profile.png') }}" alt="">
                            {% endif %}
                        </a>
                    </div><!-- /.user-photo -->
                </div><!-- /.widget -->
                <div class="widget">
                    <ul class="menu-advanced">
                        <li><a href="{{ path('profile') }}"><i class="fa fa-user"></i> Edit Profile</a></li>
                        <li class="active"><a href="{{ path('stages') }}"><i class="fa fa-clipboard"></i> Stages</a></li>
                        <li><a href="#"><i class="fa fa-key"></i> Password</a></li>
                        <li><a href="{{ path('user_logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                    </ul>
                </div><!-- /.widget -->
            </div><!-- /.sidebar -->
        </div><!-- /.col-* -->
        <div class="col-sm-8 col-lg-9">
            <div class="content">
                <div class="page-title">
                    <h1>Edit</h1>
                </div><!-- /.page-title -->

                <div class="background-white p20 mb30">
                    {{ form_start(formStage) }}
                    <h3 class="page-title">
                        Edit stage
                        <button type="submit" class="btn btn-primary btn-xs pull-right">Create</button>
                    </h3>
                    <div class="row">
                        <div class="form-group col-sm-6">
                            {{ form_row(formStage.showDateBegin, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-6">
                            {{ form_row(formStage.showDateEnd, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-6">
                            {{ form_row(formStage.dateBegin, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-6">
                            {{ form_row(formStage.dateEnd, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-7">
                            {{ form_row(formStage.name, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-5">
                            {{ form_row(formStage.price, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-12">
                            {{ form_row(formStage.description, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                        <div class="form-group col-sm-12">
                            {{ form_row(formStage.info, { 'attr' : { 'class' : 'form-control' }}) }}
                        </div>
                    </div>
                    {{ form_end(formStage) }}
                </div>
            </div><!-- /.content -->
        </div><!-- /.col-* -->
    </div><!-- /.row -->
{% endblock %}