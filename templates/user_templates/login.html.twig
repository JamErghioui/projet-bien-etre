{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="col-sm-4 col-sm-offset-4">
        <div class="page-title">
            <h1>Login</h1>
        </div><!-- /.page-title -->
        <form action="{{ path('user_login') }}" method="post">
            <div class="form-group">
                <label for="_username" class="required">Email</label>
                <input type="text" class="form-control" required name="_username">
            </div>
            <div class="form-group">
                <label for="_password" class="required">Password</label>
                <input type="password" class="form-control" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary pull-right">Login</button>
            </div>
        </form>
    </div>
{% endblock %}